@using Shop.Presentation.Facade.Users
@using Common.AspNetCore
@using Common.Application._Utilities
@inject IUserFacade UserFacade;
@{
   var selected = ViewData["selected"];
    var user = await UserFacade.GetById(User.GetUserId());
}

<div class="col-lg-3 col-md-4 mb-md-0 mb-3 sticky-sidebar">
    <div class="sidebar-widget">
        <div class="profile-sidebar shadow-around">
            <div class="d-flex align-items-center">
                @if (user.AvatarImage != "avatar.png")
                {
                    <div class="profile-avatar">
                        <img src="/images/users/avatar/@user?.AvatarImage" alt="avatar">
                    </div>
                }
                else
                {
                    <div class="profile-avatar">
                        <img src="/images/users/Unknown_person.jpg" alt="avatar">
                    </div>
                }




                <div class="profile-info">
                    <div class="d-block">
                        <h6><strong></strong></h6>
                    </div>
                    <div class="d-block">
                        <strong class="text-muted"></strong>
                    </div>
                </div>
            </div>
            <div class="user-options">
                <ul>
                    <li>
                        <a href="#">
                            <span> </span>
                            <span>
                               <span class="text-info font-weight-bold"> </span>
                            </span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <span></span>
                            <span> <span class="text-info font-weight-bold"> </span></span>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="user-menu">
                <ul>
                    <li class="@(selected=="index"?"active":null)">
                        <a href="/profile">
                            <i class="far fa-user-cog"></i>
                            اطلاعات حساب
                        </a>
                    </li>
                    <li>
                        <a href="/profile/Edit">
                            <i class="far fa-user-cog"></i>
                            ویرایش اطلاعات حساب
                        </a>
                    </li>
                    
                    <li class="@(selected=="ChangePassword"?"active":null)">
                        <a href="/profile/changePassword">
                            <i class="far fa-user-cog"></i>
                            تغییر کلمه عبور
                        </a>
                    </li>
                    <li>
                        <a href="/profile/Orders">
                            <i class="far fa-clipboard-list-check"></i>
                            سفارش های من
                        </a>
                    </li>
                    <li class="@(selected == "Address"?"active": null)">
                        <a href="/profile/Addresses">
                            <i class="far fa-map-marked"></i>
                            نشانی ها
                        </a>
                    </li>

                    <li>
                        <a href="/auth/logout">
                            <i class="far fa-sign-in-alt"></i>
                            خروج
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>