@page
@using Common.Application._Utilities
@using FShop.RazorPage.TagHelpers
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Shop.RazorPage.Pages.Admin.Sliders.IndexModel
@{
    ViewData["title"] = "مدیریت اسلایدرها";
    ViewData["selected"] = "sliders";
    Layout = "Shared/_AdminLayout";
}

<h3>@ViewData["title"]</h3>
<a asp-page="Add" class="btn btn-success mb-2">افزودن اسلایدر</a>

<div class="table-responsive card card-body p-0">
    <table class="table table-bordered mb-0">
        <thead>
        <tr>
            <th>تصویر اسلایدر</th>
            <th>عنوان</th>
            <th>لینک</th>
            <th>عملیات </th>
   
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Sliders)
        {
            <tr>
                <td class="text-bold-500">
                    <img src="@Directories.GetSliderImage(@item.ImageName)" style="max-width: 100px"/>
                </td>
                <td>@item.Title</td>
                <td>@item.Link</td>
                <td>
                    <a class="btn btn-primary" asp-page="Edit" asp-route-id="@item.Id">ویرایش</a>
                </td>
            </tr>

        }

        @if (Model.Sliders.Any() == false)
        {
            <tr>
                <td colspan="4" class="text-center">موردی برای نمایش وجود ندارد</td>
            </tr>
        }

        </tbody>
    </table>
</div>
</div>