@page
@model Shop.RazorPage.Pages.Profile.EditModel
@{
}
<div class="row mb-5">
    <partial name="Shared/_ProfileSideBar" />
    <div class="col-lg-9 col-md-8">
        <div class="row mb-4">
            <div class="col-12">
                <div class="section-title mb-2">
                    @ViewData["title"]
                </div>
                <section class="shadow-around p-3">
                    <form method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-lg-6 mb-5">
                                <div class="form-element-row">
                                    <label class="label-element" asp-for="@Model.Name"></label>
                                    <div class="form-element-with-icon">
                                        <input type="text" asp-for="@Model.Name" data-val="false" class="input-element">
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-6 mb-5">
                                <div class="form-element-row">
                                    <label class="label-element" asp-for="@Model.Family"></label>
                                    <div class="form-element-with-icon">
                                        <input type="text" asp-for="@Model.Family" data-val="false" class="input-element">
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-6 mb-5">
                                @Html.EditorFor(m=>m.PhoneNumber)
                            </div>


                            <div class="col-lg-6 mb-5">
                                <div class="form-element-row">
                                    <label class="label-element" asp-for="@Model.Email"></label>
                                    <div class="form-element-with-icon">
                                        <input type="text" asp-for="@Model.Email" data-val="false" class="input-element">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 mb-5">
                                @Html.EditorFor(m=>m.Gender)
                            </div>

                            <div class="col-lg-6 mb-5">
                                @Html.EditorFor(m=>m.ImageFile)
                            </div>
                            <div class="col-12">
                                <div class="form-element-row text-left">
                                    <button type="submit" class="btn-element btn-success-element">
                                        <i class="fad fa-user-edit"></i>
                                        ذخیره تغییرات
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>
